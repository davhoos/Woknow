<Window x:Class="WlanTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WlanTool"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="RoundedButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="7" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="371*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>

        <!-- background -->
        <Border 
            Background="CornflowerBlue"
            CornerRadius="25" Grid.ColumnSpan="2" >
        </Border>

        <!-- main Grid -->

        <Grid Grid.ColumnSpan="2" 
          MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="245" />
                <ColumnDefinition Width="45" />
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="120" />
                <RowDefinition Height="120" />
                <RowDefinition Height="120" />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>

            <!-- Text Block-->
            <TextBlock Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Text="Woknow"
                Foreground="AntiqueWhite"
                FontFamily="Cascadia Mono"
                FontSize="36"
                Margin="0,10,0,0"
            />



            <Grid Height="50"
                  Width="94"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  Margin="195,0,0,0" Grid.Column="3" Grid.ColumnSpan="2">

                <Button x:Name="konec" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Click="konec_Click" Width="50" Height="50" Padding="1,1,1,1" BorderThickness="0,0,0,0" RenderTransformOrigin="1.606,0.543" Margin="40,0,0,0">
                    <Button.OpacityMask>
                        <ImageBrush Stretch="Uniform" ImageSource="/x-mark-4-48.ico"/>
                    </Button.OpacityMask>
                    <Button.Background>
                        <ImageBrush ImageSource="/x-mark-4-48.ico" TileMode="None"/>
                    </Button.Background>
                </Button>

            </Grid>



            <Button x:Name="Tlacitko1" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="God mode" HorizontalAlignment="Left" Margin="0,12,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="Button_Click" Height="22" />
            <Button x:Name="Tlacitko2" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="Network adapters" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="120" Click="btnNetAdapters" Height="22" />
            <Button x:Name="Tlacitko3" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="Clean manager" HorizontalAlignment="Left" Margin="0,82,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="btnCleanManager" Height="22"/>
            <RichTextBox x:Name="rtbTaskOverview" Grid.Column="1" Grid.ColumnSpan="3" Margin="130,13,80,20" Grid.RowSpan="2" Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <RichTextBox x:Name="rtbAutoruns2" Grid.Column="1" Grid.ColumnSpan="3" Margin="130,14,80,16" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <TextBox x:Name="txbWinCode" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="24" Margin="130,109,0,0" Grid.Row="3" TextWrapping="Wrap" Text="---" VerticalAlignment="Top" Width="515" IsReadOnly="True" TextAlignment="Center" Grid.RowSpan="2"/>
            <Button x:Name="btnTaskOpen" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="3" Content="TaskScheduler" HorizontalAlignment="Left" Margin="173,16,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96" Click="TasksOpenWindow" Grid.ColumnSpan="2" Height="28" />
            <Button x:Name="btnTaskOpen2" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="3" Content="User reg start" HorizontalAlignment="Left" Margin="173,16,0,74" Width="96" Click="UserStartReg" Grid.ColumnSpan="2" Grid.Row="1" />
            <Button x:Name="btnWinStart" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="3" Content="Windows starts" HorizontalAlignment="Left" Margin="173,97,0,115" Width="96" Grid.ColumnSpan="2" Grid.Row="1" Click="btnWinStart_Click" Grid.RowSpan="2" />
            <Button x:Name="btnBackuppWif" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="Backup All Wlans" HorizontalAlignment="Left" Margin="0,9,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" Click="btnBackuppWifi" Height="22"/>
            <Label Grid.Column="1" Content="Startup applications &amp; tasks" HorizontalAlignment="Left" Margin="176,30,0,0" VerticalAlignment="Top" FontSize="16" Grid.ColumnSpan="2" Width="240" Height="0" Grid.Row="1"/>
            <Button x:Name="btnImportWlanProfileOnce" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="Import Wlan profile" HorizontalAlignment="Left" Margin="0,41,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120" Click="btnImportWlanOnce" Height="22"/>
            <Button x:Name="btnExportKexLics" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="3" Content="Export Lic. Key" HorizontalAlignment="Left" Margin="173,108,0,0" Grid.Row="3" VerticalAlignment="Top" Width="96" Click="btnExportKexLic" Grid.ColumnSpan="2" Height="28" Grid.RowSpan="2" />
            <Button x:Name="btnControlP" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="3" Content="Control Panel" HorizontalAlignment="Left" Margin="173,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="96" Click="btnControlPanel" Grid.ColumnSpan="2" Height="48" Grid.RowSpan="2" />
            <Button x:Name="btnSMBpath" Style="{DynamicResource RoundedButtonStyle1}" Grid.Column="1" Content="smb mapp folder" HorizontalAlignment="Left" Margin="0,9,0,0" Grid.Row="3" VerticalAlignment="Top" Width="120" Height="22" Click="btnSMBpath_Click"/>
            <CheckBox x:Name="CheckBoxShowLicKey" Grid.Column="1" Content="Show license code" HorizontalAlignment="Left" Margin="0,113,0,105" Width="120" Grid.Row="3" Checked="CheckBoxShowLicKeyH" Unchecked="LicKeyVisibleUncheck" IsChecked="True" Grid.RowSpan="2"/>
            <Label Grid.Column="1" Content="Startup Application" HorizontalAlignment="Left" Margin="131,49,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="112"/>
            <Label Grid.Column="1" Content="Startup Tasks" HorizontalAlignment="Left" Margin="130,109,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.RowSpan="2"/>
        </Grid>
    </Grid>




</Window>
